generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  image     String?
  password  String
  address   String
  role      Role     @default(MEMBER)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  citizenId String   @unique
  tel       String
  orderbyUser Order[] @relation("orderbyUser")
  orderShop Order[] @relation("orderShop")
  items     Item[]
  sale      Sale[]
}

model Item {
  id          Int      @id @default(autoincrement())
  productName String
  slug        String   @unique
  excerpt     String
  content     String
  price       Int
  image       String
  userId      Int
  available   Boolean  @default(true)
  stock       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  sold        Int?     @default(0)
  viewer      Int?     @default(0)
  user        User     @relation(fields: [userId], references: [id])
  sale        Sale[]
}

model Sale {
  id       Int      @id @default(autoincrement())
  saleTime DateTime @default(now())
  userId   Int
  itemId   Int
  orderId  Int
  customerId Int
  quantity Int
  price    Int
  item     Item     @relation(fields: [itemId], references: [id])
  user     User     @relation(fields: [userId], references: [id])
  order    Order     @relation(fields: [orderId], references: [id])

}

model Order{
  id       Int      @id @default(autoincrement())
  userId   Int
  shopId   Int
  sale     Sale[]
  user     User     @relation("orderbyUser",fields: [userId], references: [id])
  shop     User     @relation("orderShop",fields: [shopId], references: [id])
  createdAt DateTime @default(now())

}

enum Role {
  ADMIN
  MEMBER
}
